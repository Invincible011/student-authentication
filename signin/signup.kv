<SignUpWindow>:
    name: "signup_scr"
    BoxLayout:
        id: main_win
        orientation: 'vertical'
        spacing: 10
        space_x: self.size[0]/3
        canvas.before:
            Color: 
                rgba: white_color
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'images/lib.jpg'
        BoxLayout:
            size_hint_y: None
            height: 50
            canvas.before:
                Color: 
                    rgba: box_bg_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            ULabel: 
                size_hint_x: 1
            ULabel: 
                text: "Sigin Up"
                bold: True
                size_hint_x: .4
            ULabel: 
                id: t2
                size_hint_x: .8
            UBtn:
                text: "X"
                size_hint_x: .2
                background_color: rgba(.04, .45, .45, 1)
                background_normal:
                on_release: root.dispose()
        BoxLayout:
            orientation: "vertical"
            padding: main_win.space_x -100 , 10

            BoxLayout:
                size_hint_y: None
                height: 40
                pos_hint: {'center_x': .5, 'center_y': .5}
                ULabTop:
                    id: markup
                    text: 'Already a User?'
                FlatButton:
                    id: signin
                    text: 'Sign In'
                    on_release: 
                        app.root.current = "login_scr" 
                        root.manager.transition.direction = "right"
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                size_hint_y: None
                height: 460
                ULabel:
                    id: greet
                    size_hint_y: None
                    height: 50
                    text: ''
                    color: greet_color
                ULabel:
                    id: info
                    size_hint_y: None
                    height: 60
                    markup: True
                BoxLayout:
                    orientation: "vertical"
                    #size_hint_y: None
                    GridLayout:
                        cols: 2
                        spacing: 10
                        padding: 0, 10
                        UText: 
                            id: f_name
                            text: ''
                            hint_text: "Firstname..."
                            focus: True
                            on_text_validate: m_name.focus = True
                            required: True
                        UText: 
                            id: m_name
                            hint_text: "Middlename..."
                            on_text_validate: l_name.focus = True
                        UText: 
                            id: l_name
                            hint_text: "Lastname..."
                            on_text_validate: dept.focus = True
                        UText: 
                            id: dept
                            hint_text: "Department..."
                            on_text_validate: 
                        UText: 
                            hint_text: "Gabage value3..."
                        UText: 
                            hint_text: "Gabage value4..."
                        UText: 
                            hint_text: "Gabage value5..."
                        UText: 
                            hint_text: "Gabage value6..."
            UBtn:
                text: "Sign Up"
                size_hint_y: None
                height: 40
                font_size: 14
                #on_release: root.validate_user()
            ULabel:
                id: sp2
        BoxLayout:
            size_hint_y: None
            height: 50
            canvas.before:
                Color: 
                    rgba: box_bg_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            ULabel: 
                id: footer
                font_size: 11
                text: "Â© 2022. University of Ilorin, Ilorin. All right reserved | Developed by Fandroid Tech."
                color: white_color
                bold: True