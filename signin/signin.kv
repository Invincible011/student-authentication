<LoginWindow>:
    id: main_win
    orientation: 'vertical'
    spacing: 10
    space_x: self.size[0]/3
    canvas.before:
        Color: 
            rgba: (1, 1, 1, 1)
        Rectangle:
            size: self.size
            pos: self.pos
    BoxLayout:
        size_hint_y: None
        height: 50
        canvas.before:
            Color: 
                rgba: (.06, .45, .45, 1)
            Rectangle:
                size: self.size
                pos: self.pos
        Label: 
            id: t1
            size_hint_x: 1
        Label: 
            id: access_code
            text: "Sigin in"
            bold: True
            size_hint_x: .4
        Label: 
            id: t2
            size_hint_x: .8
        Button:
            text: "X"
            bold: True
            size_hint_x: .2
            background_color: rgba(.04, .45, .45, 1)
            background_normal:
            on_release: root.closeapp()
    BoxLayout:
        orientation: "vertical"
        padding: main_win.space_x, 10
        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            size_hint_y: None
            height: 200
            Label:
                size_hint_y: None
                height: 80
            Label:
                id: info
                size_hint_y: None
                height: 20
                markup: True
            TextInput: 
                id: user
                text: ''
                hint_text: "Username..."
                multiline: False
                focus: True
                on_text_validate: pwd.focus = True
            TextInput: 
                id: pwd
                hint_text: "Password..."
                multiline: False
                password: True
                on_text_validate: root.validate_user()
        Label:
            id: sp
            size_hint_y: None
            height:40
        Button:
            text: "Sign in"
            size_hint_y: None
            height: 40
            background_color: (.06, .45, .45, 1)
            background_normal: ''
            on_release: root.validate_user()
        Label:
            id: sp2
            

    