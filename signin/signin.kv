<LoginWindow>:
    name: "login_scr"
    BoxLayout:
        id: main_win
        orientation: 'vertical'
        spacing: 10
        space_x: self.size[0]/3
        canvas.before:
            Color: 
                rgba: (1, 1, 1, 1)
            Rectangle:
                size: self.size
                pos: self.pos
                source: 'images/class.jpg'
        BoxLayout:
            size_hint_y: None
            height: 50
            canvas.before:
                Color: 
                    rgba: (.04, .45, .45, 1)
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label: 
                size_hint_x: 1
            Label: 
                id: access_code
                text: "Sigin in"
                bold: True
                size_hint_x: .4
            Label: 
                id: t2
                size_hint_x: .8
            UBtn:
                text: "X"
                bold: True
                size_hint_x: .2
                background_color: rgba(.04, .45, .45, 1)
                background_normal: ""
                on_release: root.dispose()
        BoxLayout:
            orientation: "vertical"
            padding: main_win.space_x -80 , 10
            BoxLayout:
                size_hint_y: None
                height: 40
                pos_hint: {'center_x': .5, 'center_y': .5}
            Label:
                size_hint_y: None
                height: 100
            Label:
                size_hint_y: None
                height: 30
                text: '"Use your matric number as your username"'
                color: (0, 0, 1, .7)
                bold: True
            BoxLayout:
                orientation: 'vertical'
                spacing: 10
                size_hint_y: None
                height: 200
                Label:
                    id: greet
                    size_hint_y: None
                    height: 80
                    text: ''
                    color: greet_color
                Label:
                    id: info
                    size_hint_y: None
                    height: 30
                    markup: True
                UText: 
                    id: user
                    text: ''
                    hint_text: "username..."
                    focus: True
                    on_text_validate: pwd.focus = True
                UText: 
                    id: pwd
                    hint_text: "password..."
                    password: True
                    on_text_validate: root.validate_user()
            FlatButton1:
                id: forget_pwd
                text: 'forget password?'
                disabled: True
            RoundButton:
                text: "Sign in"
                size_hint_y: None
                height: 40
                back_color: box_bg_color
                background_normal: ''
                font_size: 14
                on_release: 
                    root.validate_user()
            Label:
                id: sp2
        BoxLayout:
            size_hint_y: None
            height: 50
            canvas.before:
                Color: 
                    rgba: box_bg_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label: 
                id: t1
                font_size: 11
                text: ''
                color: white_color
                bold: True
