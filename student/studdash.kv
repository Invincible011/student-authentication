<MainDashboard>:
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: gray_color
            Rectangle:
                size: self.size
                pos: self.pos
        BoxLayout:
            size_hint_y: None
            height: 100
            canvas.after:
                Color:
                    rgba: white_color
                Rectangle:
                    size: self.size
                    pos: self.pos
                    source: 'images/unilorin_bg.jpeg'
        BoxLayout:
            size_hint_y: None
            height: 5
            canvas.after:
                Color:
                    rgba: light_gray_color
                Rectangle:
                    size: self.size
                    pos: self.pos
        BoxLayout:
            id: header
            size_hint_y: None
            height: 40
            canvas.before:
                Color: 
                    rgba: box_bg_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            FlatButton:
                text: "Logout"
                size_hint_x: .4
                on_release: root.close()
            Label:
                id: log_time
                size_hint_x: .6
                text: ''
                font_size: 12
                bold: True
        BoxLayout:
            id: login_details
            size_hint_y: None
            height: 30
            canvas.before:
                Color: 
                    rgba: white_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            FlatButton1:
                id: togglemenu
                font_size: 13
                text: "Menu"
                color: box_bg_color
                size_hint_x: .22
                background_color: white_color
                on_release: root.togglemenutab()
            HeadLabel:
                id: togglemenu
                font_size: 12
                text: "Welcome:"
                size_hint_x: .5
            HeadLabel:
                id: togglemenu
                font_size: 12
                text: "Session:"
                size_hint_x: .3
        BoxLayout:
            padding: 0, 5, 0, 10
            BoxLayout:
                id: menu
                orientation: "vertical"
                size_hint_x: None
                width: 140
                spacing: 1
                canvas.before:
                    Color: 
                        rgba: box_bg_color
                    Rectangle:
                        size: self.size
                        pos: self.pos
                NewBox:
                    orientation: 'vertical'
                    Toggle:
                        id: p_setup
                        text: "PERSONAL SETUP"
                        on_state: 
                            self.parent.insert_widget(Factory.Dropdown([('Main Menu', lambda x:print("Hello Main")), ('Personal Details',  lambda x:print("Hello Main")), ('Password Management', lambda x:print("Hello Main")), ('Logout',  lambda x:print("Hello Main"))], scr_mngr), self) if self.state != "normal" else self.parent.remove_inserted_widget()
                        group: 'user_navs'
                    Toggle:
                        id: p_setup
                        text: "MAIN MENU"
                        halign: 'left'
                        on_state: 
                            self.parent.insert_widget(Factory.Dropdown(['Procedures for Registration', 'Current Charges', 'School Charges Payment', 'Course Registration', 'Print Completed Course Form', 'Print Payment Receipts', 'Print Results', 'Revalidation', 'Print Admission Clearance', 'Admission Screening Result']), self) if self.state != "normal" else self.parent.remove_inserted_widget()
                        group: 'user_navs'
                    Toggle:
                        id: p_setup
                        text: "FORMS AND PAYMENTS"
                        on_state: 
                            self.parent.insert_widget(Factory.Dropdown(['Add and Drop', 'Outstanding Payment', 'Add and Drop Form', 'Request for Credit Unit', 'Payment Registration (Returning Student)']), self) if self.state != "normal" else self.parent.remove_inserted_widget()
                        group: 'user_navs'
                    Toggle:
                        id: p_setup
                        text: "e-VOTING"
                        on_state: 
                            self.parent.insert_widget(Factory.Dropdown(['e-Voting']), self) if self.state != "normal" else self.parent.remove_inserted_widget()
                        group: 'user_navs'
                    Toggle:
                        id: p_setup
                        text: "LECTURERS ASSESSMENT"
                        on_state: 
                            self.parent.insert_widget(Factory.Dropdown(['Lecturers Assessment']), self) if self.state != "normal" else self.parent.remove_inserted_widget()
                        group: 'user_navs'
                    Toggle:
                        id: p_setup
                        text: "GRADUATION STATUS"
                        on_state: 
                            self.parent.insert_widget(Factory.Dropdown(['Confirm Graduation Status']), self) if self.state != "normal" else self.parent.remove_inserted_widget()
                        group: 'user_navs'
                    Label:
                        id: quick_solve
            BoxLayout:
                id: p
                orientation: "vertical"
                ScreenManager:
                    id: scr_mngr
                    PersonalDetails:
        BoxLayout:
            id: footer
            size_hint_y: None
            height: 40
            canvas.before:
                Color: 
                    rgba: box_bg_color
                Rectangle:
                    size: self.size
                    pos: self.pos
            ULabelFooter:
            
