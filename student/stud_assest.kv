<Dropdown>:
    orientation: 'vertical'
    size_hint_y: self.height
    font_size: 10
    color: light_more_white
    

<Toggle@ToggleButton>:
    font_size: 11
    size_hint_y: None
    height: 40 
    bold: True
    color: (1, 1, 1, .8)
    background_color: box_bg_color
    background_normal: ''

<SpChildren@SpinnerOption>:
    font_size: 10
    size_hint_y: None
    height: 30
    color: (1, 1, 1, .6)
    background_color: black_color
    background_normal: ''

<FlatButton@ButtonBehavior+Label>:
    bold: True
    font_size: 13
    color: white_color
    background_color: box_bg_color
    
<FlatButton1@ButtonBehavior+Label>:
    size_hint_y: None
    height: 30
    bold: True
    color: white_color

<HeadLabel@Label>:
    color: box_bg_color
    background_color: white_color
    bold: True

